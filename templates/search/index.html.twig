{% block content %}
	<div class="search-artiste">
		{% if artistes | length > 0 %}
			<div class="h3-search-artiste">
				<h3>Artistes</h3>
			</div>
			<ul>
				{% for artiste in artistes %}
					<div class="ul-search-artiste">
						<div class="search-artiste-item1">
							<div>
								<a href="{{ path('app_admin_artiste_show', {'id': artiste.id}) }}" class="a-artiste-nom">
									<li><img class="search-artiste-photo" src="{{ vich_uploader_asset(artiste, 'imageFile') }}" alt="Couverture du livre"></li>
								</a>
							</div>
						</div>
						<div class="search-artiste-item2">
							<div>
								<a href="{{ path('app_admin_artiste_show', {'id': artiste.id}) }}" class="a-artiste-nom">
									<li class="search-artiste-nom">
										<i>
											<b>Nom :</b>
											{{ artiste.nom }}
										</i>
									</li>
								</a>
							</div>
							<div>
								<li class="search-artiste-date-naissance">
									<b>Date de naissance :</b>
									<b>Sortie :</b>
									{{ artiste.dateNaissance ? artiste.dateNaissance|date('Y-m-d') : '' }}
								</li>
							</div>
							<div>
								<li class="search-artiste-activite">
									<b>Activité(s) :</b>
									{% for metiers in artiste.metiers %}
										{{ metiers.nom }}
									{% endfor %}
								</li>
							</div>
							<div>
								<li class="search-artiste-ville">
									<b>Ville d'origine :</b>
									{{artiste.ville.nom}}
								</li>
							</div>
							<div>
								<li class="search-artiste-pays">
									<b>Pays d'origine :</b>
									{{ artiste.paysOrigine }}</li>
							</div>
						</div>
						<div class="search-artiste-item3">
							<li class="search-artiste-oeuvres">
								<div class="search-artiste-oeuvres-container">
									<div class="search-artiste-oeuvres-livres">
										{% if livres | length > 0 %}
											<div>
												{% if artiste.auteursLivres|join(",") is not empty %}
													<p>Livres</p>
													<p>Auteur :
														{% for livre in artiste.auteursLivres %}
															{{ livre.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>
											<div>
												{% if artiste.traducteursLivres|join(",") is not empty %}
													<p>Livres</p>
													<p>Traducteur :
														{% for livre in artiste.traducteursLivres %}
															{{ livre.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>
										{% endif %}
									</div>

									<div class="search-artiste-oeuvres-films">
										{% if films | length > 0 %}
											<div>
												{% if artiste.realisateursFilms|join(",") is not empty %}
													<p>Films</p>
													<p>Réalisateur :
														{% for film in artiste.realisateursFilms %}
															{{ film.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>
											<div>
												{% if artiste.scenaristesFilms|join(",") is not empty %}
													<p>Films</p>
													<p>Scénariste :
														{% for film in artiste.scenaristesFilms %}
															{{ film.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>
											<div>
												{% if artiste.producteursFilms|join(",") is not empty %}
													<p>Films</p>
													<p>Producteur :
														{% for film in artiste.producteursFilms %}
															{{ film.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>

											<div>
												{% if artiste.castingFilm|join(",") is not empty %}
													<p>Films</p>
													<p>Acting :
														{% for film in artiste.castingFilm %}
															{{ film.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>

											<div>
												{% if artiste.compositeursFilms|join(",") is not empty %}
													<p>Films</p>
													<p>Compositeur :
														{% for film in artiste.compositeursFilms %}
															{{ film.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>
										{% endif %}
									</div>

									<div class="search-artiste-oeuvres-series">
										{% if series | length > 0 %}
											<div>
												{% if artiste.createursSeries|join(",") is not empty %}
													<p>Séries</p>
													<p>Créateur :
														{% for serie in artiste.createursSeries %}
															{{ serie.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>
											<div>
												{% if artiste.scenaristesSeries|join(",") is not empty %}
													<p>Séries</p>
													<p>Scénariste :
														{% for serie in artiste.scenaristesSeries %}
															{{ serie.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>
											<div>
												{% if artiste.producteursSeries|join(",") is not empty %}
													<p>Séries</p>
													<p>Producteur :
														{% for serie in artiste.producteursSeries %}
															{{ serie.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>
											<div>
												{% if artiste.castingSerie|join(",") is not empty %}
													<p>Séries</p>
													<p>Acting :
														{% for serie in artiste.castingSerie %}
															{{ serie.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>
											<div>
												{% if artiste.compositeursSeries|join(",") is not empty %}
													<p>Séries</p>
													<p>Compositeur :
														{% for serie in artiste.compositeursSeries %}
															{{ serie.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>
										{% endif %}
									</div>
									<div class="search-artiste-oeuvres-albums">
										{% if albums | length > 0 %}
											<div>
												{% if artiste.compositeursAlbums|join(",") is not empty %}
													<p>Albums</p>
													<p>Compositeur :
														{% for album in artiste.compositeursAlbums %}
															{{ album.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>
											<div>
												{% if artiste.compositeursAlbums|join(",") is not empty %}
													<p>Albums</p>
													<p>Producteur :
														{% for album in artiste.producteursAlbums %}
															{{ album.titreFrancais }}
														{% endfor %}
													</p>
												{% endif %}
											</div>
										{% endif %}
									</div>
								</div>
							</li>
						</li>
					</div>
				</div>
			{% endfor %}
		</ul>
	{% endif %}
</div>

<div class="search-livre">
	{% if livres | length > 0 %}
		<div class="h3-search-livre">
			<h3>Livres</h3>
		</div>
		<ul>
			{% for livre in livres %}
				<div class="ul-search-livre">
					<div class="search-livre-item1">
						<div>
							<a href="{{ path('app_admin_livre_show', {'id': livre.id}) }}" class="a-livre-titre">
								<li><img class="search-livre-couverture" src="{{ vich_uploader_asset(livre, 'imageFile') }}" alt="Couverture du livre"></li>
							</a>
						</div>
					</div>
					<div class="search-livre-item2">
						<div>
							<a href="{{ path('app_admin_livre_show', {'id': livre.id}) }}" class="a-livre-titre">
								<li class="search-livre-titre">
									<i>
										<b>Titre français :</b>
										{{ livre.titreFrancais }}
									</i>
								</li>
							</a>
						</div>
						<div>
							<li class="search-livre-auteur">
								<b>Auteur(s) :</b>
								{% for artiste in livre.auteur %}
									{{ artiste.nom }}
								{% endfor %}
							</li>
						</div>
						<div>
							<li class="search-livre-genre">
								<b>Genre(s) :</b>
								{% for Genre in livre.Genres %}
									{{ Genre.nom }}
								{% endfor %}
							</li>
						</div>
						<div>
							<li class="search-livre-editeur">
								<b>Editeur(s) :</b>
								{% for EditeurFrance in livre.EditeurFrance %}
									{{ EditeurFrance.nom }}
								{% endfor %}
							</li>
						</div>
						<div>
							<li class="search-livre-date">
								<b>Parution :</b>
								{% set formattedDate = livre.DatePublicationFrance ? "Le " ~ livre.DatePublicationFrance|date('d F Y', null, 'fr') : '' %}{{ formattedDate }}</li>
						</div>
					</div>
					<div class="search-livre-item3">
						<li class="search-livre-synopsis">
							<p>
								<b>Synposis :</b>
							</p>
							{{ livre.synopsis }}</li>
					</div>
				</div>
			{% endfor %}
		</ul>
	{% endif %}
</div>

<div class="search-film">
	{% if films | length > 0 %}
		<div class="h3-search-film">
			<h3>Films</h3>
		</div>
		<ul>
			{% for film in films %}
