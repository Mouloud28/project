							<li class="search-film-date">
								<b>Sortie :</b>
								{{ film.dateSortieFrance ? film.dateSortieFrance|date('Y-m-d') : '' }}</li>
						</div>
					</div>
					<div class="search-film-item3">
						<li class="search-film-synopsis">
							<p>
