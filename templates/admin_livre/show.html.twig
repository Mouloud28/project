{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre_francais</th>
                <td>{{ livre.titreFrancais }}</td>
            </tr>
            <tr>
                <th>Titre_original</th>
                <td>{{ livre.titreOriginal }}</td>
            </tr>
            <tr>
                <th>Couverture</th>
                <td>{{ livre.couverture }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ livre.synopsis }}</td>
            </tr>
            <tr>
                <th>Pays_origine</th>
                <td>{{ livre.paysOrigine }}</td>
            </tr>
            <tr>
                <th>Date_publication_france</th>
                <td>{{ livre.datePublicationFrance ? livre.datePublicationFrance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_publication_pays_origine</th>
                <td>{{ livre.datePublicationPaysOrigine ? livre.datePublicationPaysOrigine|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>{{ livre.ISBN }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_livre_index') }}">back to list</a>

    <a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}">edit</a>

    {{ include('admin_livre/_delete_form.html.twig') }}
{% endblock %}
