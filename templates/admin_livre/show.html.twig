{% extends 'base.html.twig' %}

{% block title %}Livre
{% endblock %}

{% block body %}
	<h1>Livre</h1>

	<table class="table">
		<tbody>

			<tr>
				<th>Id</th>
				<td>{{ livre.id }}</td>
			</tr>

			<tr>
				<th>Titre français</th>
				<td>{{ livre.titreFrancais }}</td>
			</tr>

			<tr>
				<th>Titre original</th>
				<td>
					{% if livre.paysOrigine is same as ('France') %}
						<p>-</p>
					{% else %}
						{{ livre.titreOriginal }}
					{% endif %}
				</td>
			</tr>

			<tr>
				<th>Auteur(s)</th>
				<td>
					{% if livre.artistes %}
						{% for artiste in livre.artistes %}
							{{ artiste.nom }}
						{% endfor %}
					{% else %}
						<span class="text-danger fst-italic">N.R</span>
					{% endif %}
				</td>
			</tr>

			<tr>
				<th>Couverture</th>
				<td><img src="{{ vich_uploader_asset(livre, 'imageFile') }}" alt="Couverture du livre"></td>
			</tr>

			<tr>
				<th>Genre(s)</th>
				<td>
					{% if livre.genres %}

						{% for genre in livre.genres %}
							{{ genre.nom }}
						{% endfor %}
					{% endif %}
				</td>
			</tr>
		</tbody>
	</td>
</tr>

<tr>
	<th>Synopsis</th>
	<td>{{ livre.synopsis }}</td>
</tr>

<tr>
	<th>Pays d'origine</th>
	<td>{{ livre.PaysOrigine }}</td>
</tr>

<tr>
	<th>Date de publication (France)</th>
	<td>{% set formattedDate = livre.DatePublicationFrance ? "Le " ~ livre.DatePublicationFrance|date('d F Y', null, 'fr') : '' %}{{ formattedDate }}</td>
</tr>

<tr>
	<th>Date de publication (Pays d'origine)</th>
	<td>

		{% if livre.PaysOrigine is same as ('France') %}
