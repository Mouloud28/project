{% extends 'base.html.twig' %}

{% block title %}Film index
{% endblock %}

{% block body %}

{{form_start(form)}}
<div class="flex justify-center">
	<div class="mb-3 xl:w-96">
		<div class="input-group relative flex flex-wrap items-stretch w-full mb-4">

			{{form_widget(form.search)}}

			<button class="btn inline-block px-6 py-2.5 bg-blue-600 text-black font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out flex items-center" type="submit" id="button-addon2">
				<svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="search" class="w-4" role="img" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 512 512">
					<path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"></path>
				</svg>
			</button>
		</div>
	</div>
</div>
{{form_end(form)}}

	<h1>Film index</h1>

	<table class="table">
		<thead>
			<tr>
				<th class="rounded-row1">Id</th>
				<th>Titre francais</th>
				<th>Titre original</th>
				<th>Réalisateur(s)</th>
				<th>Affiche</th>
				<th>Durée</th>
				<th>Synopsis</th>
				<th>Pays d'origine</th>
				<th>Date de sortie (France)</th>
				<th>Date de sortie (Pays d'origine)</th>
				<th>Bandes-annonces et teasers</th>
				<th class="rounded-row2">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for film in films %}
				<tr>
					<td class="rounded-row1">{{ film.id }}</td>
					<td>{{ film.titreFrancais }}</td>
					<td>{{ film.titreOriginal }}</td>
					<td>
						{% if film.realisateur %}
							{% for artiste in film.realisateur %}
								{{ artiste.nom }}
							{% endfor %}
						{% else %}
							<span class="text-danger fst-italic">N.R</span>
						{% endif %}
					</td>
					<td>{{ film.affiche }}</td>
					<td>{{ film.duree ? film.duree|date('H:i:s') : '' }}</td>
					<td>{{ film.synopsis }}</td>
					<td>{{ film.paysOrigine }}</td>
					<td>{{ film.dateSortieFrance ? film.dateSortieFrance|date('Y-m-d') : '' }}</td>
					<td>{{ film.dateSortiePaysOrigine ? film.dateSortiePaysOrigine|date('Y-m-d') : '' }}</td>
					<td>
						<video src="src=" {{ vich_uploader_asset(film, 'imageFile2') }} ""></video>
					</td>
					<td class="rounded-row2">
						<a href="{{ path('app_admin_film_show', {'id': film.id}) }}">show</a>
						<a href="{{ path('app_admin_film_edit', {'id': film.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11" class="rounded">Aucun résultat trouvé.</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_admin_film_new') }}">Ajouter</a>
{% endblock %}
