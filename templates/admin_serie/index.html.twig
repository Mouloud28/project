{% extends 'base.html.twig' %}

{% block title %}Admin - Gestion des séries
{% endblock %}

{% block body %}

	<div class="h1-series rounded text-center">
		<div class="item-h1-series-fontawsome1"><i class="fa-solid fa-lock fa-3x"></i></div>
		<div class="item-h1-series-fontawsome2"><h1>Admin - Gestion des séries</h1></div>
	</div>

	<div class="flex-container-series1">
		<div>
			<span class="span-series">Résultats :</span>
			{{ series.getTotalItemCount }}</div>
		<div>{{ include('admin_serie/_search_data_html.twig') }}</div>
	</div>

	<div class="flex-container-series2">
		<div class="ajouter my-2 rounded text-center">
			<a href="{{ path('app_admin_serie_new') }}" class="text-decoration-none text-white fw-bold">Ajouter</a>
		</div>
		<div></div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th class="rounded-row1">ID</th>
				<th>Titre francais</th>
				<th>Auteur(s)</th>
				<th>Genre(s)</th>
				<th class="rounded-row2">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for serie in series %}
				<tr>
					<td class="rounded-row1">{{ serie.id }}</td>
					<td>{{ serie.titreFrancais }}</td>
					<td>
						{% if serie.createur %}
							{% for artiste in serie.createur %}
								{{ artiste.nom }}
							{% endfor %}
						{% else %}
							<span class="text-danger fst-italic">N.R</span>
						{% endif %}
					</td>

					<td>
						{% if serie.Genres %}
							{% for Genre in serie.Genres %}
								{{ Genre.nom }}
							{% endfor %}
						{% else %}
							<span class="text-danger fst-italic">N.R</span>
						{% endif %}
					</td>

					<td class="rounded-row2">
						<div class="fiche-modifier-supprimer">
							<button class="btn-fiche-modifier-supprimer my-2 rounded text-center">
								<a href="{{ path('app_admin_serie_show', {'id': serie.id}) }}" class="text-decoration-none text-white fw-bold">Fiche</a>
							</button>
							<button class="btn-fiche-modifier-supprimer my-2 rounded text-center">
								<a href="{{ path('app_admin_serie_edit', {'id': serie.id}) }}" class="text-decoration-none text-white fw-bold">Modifier</a>
							</button>
							{{ include('admin_serie/_delete_form.html.twig') }}
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="13" class="rounded">Aucun résultat trouvé.</td>
				</tr>
			{% endfor %}
		</tbody>
	</tr>
</tbody></tbody></table><div class="navigation">{{ knp_pagination_render(series) }}</div>{% endblock %}
