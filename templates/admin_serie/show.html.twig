{% block title %}Serie{% endblock %}

{% block body %}
    <h1>Serie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ serie.id }}</td>
            </tr>
            <tr>
                <th>Titre_francais</th>
                <td>{{ serie.titreFrancais }}</td>
            </tr>
            <tr>
                <th>Titre_original</th>
                <td>{{ serie.titreOriginal }}</td>
            </tr>
            <tr>
                <th>Affiche</th>
                <td>{{ serie.affiche }}</td>
