{% extends 'base.html.twig' %}

{% block title %}Admin - Gestion des artistes{% endblock %}

{% block body %}
    <h1>Admin - Gestion des artistes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date de naissance</th>
                <th>Pays d'origine</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artiste in artistes %}
            <tr>
                <td>{{ artiste.id }}</td>
                <td>{{ artiste.nom }}</td>
                <td>{{ artiste.dateNaissance ? artiste.dateNaissance|date('d-m-Y') : '' }}</td>
                <td>{{ artiste.paysOrigine }}</td>
                <td><img src="{{ vich_uploader_asset(artiste, 'imageFile') }}" alt="Image"></td>
                <td>
                    <a href="{{ path('app_admin_artiste_show', {'id': artiste.id}) }}">show</a>
                    <a href="{{ path('app_admin_artiste_edit', {'id': artiste.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_artiste_new') }}">Create new</a>
{% endblock %}
